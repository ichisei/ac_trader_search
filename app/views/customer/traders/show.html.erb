<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <P class="nav-link active" aria-current="true"><%= @trader.company_name %></P>
      </li>
    </ul>
  </div>
  <div class="card-body">
  <h2>会社詳細</h2>
    <div class="row">
      <div class="col-md-2">
        <div class="form-group col-8">
          <%= image_tag @trader.get_profile_image(100, 100) %>
        </div>
      </div>
      <div class="col-md-10">

        <%= render 'trader/traders/detail', trader: @trader, schedules: @schedules %>

      </div>
    </div>
  </div>
  <% if customer_signed_in? %>
  <div class="col mt-3">
  <h6>＜レビュー＞</h6>
    <% @posts.each do |post| %>
      <div class="card ml-5">
        <div class="card-body">
          <%= render "trader/posts/rating", post: post %>
          <div class="card-text">
            <%= post.customer.last_name %>　様
            <%= post.created_at.strftime('%Y/%m/%d') %><br>
            <%= post.comment %></tr><br>
            <% if post.customer == current_customer %>
              <%= link_to [@trader, post], method: :delete, style: 'color: red;' do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            <%end%>
          </div>
        </div>
      </div>
    <% end %>
    <div class="mt-3 mx-5">
      <%= link_to "レビューする", new_trader_post_path(@trader), class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>