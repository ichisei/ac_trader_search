<div class="container">
  <h2>業者詳細</h2>
    <div class="row">
      <div class="col-md-2">
        <%= image_tag @trader.get_profile_image(100, 100) %>
      </div>
      <div class="col-md-10">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>会社名</td>
              <td><%= @trader.company_name %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= @trader.company_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td>〒<%= @trader.post_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @trader.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @trader.telephone_number %></td>
            </tr>
            <tr>
              <td>e-mail</td>
              <td><%= @trader.email %></td>
            </tr>
            <tr>
              <td>対応可能エリア</td>
              <td><%= @trader.areas.map(&:compatible_area).join("/") %></td>
            </tr>
            <tr>
              <td>対応可能機器</td>
              <td><%= @trader.machines.map(&:possible_machine).join("/") %></td>
            </tr>
            <tr>
              <td>対応可能日</td>
              <td><%= @schedules.map{|s| s.start_time.strftime("%-m月%-d日")}.join(" ／ ") %></td>
            </tr>
            <tr>
              <td>PR</td>
              <td><%= @trader.public_relations %></td>
            </tr>
          </tbody>
        </table>
        <div class="flex align-center pl5">
          <%= link_to "業者一覧", customers_path, class: "btn btn-success" %>
        </div>
        </div>

        <% if customer_signed_in? %>
        <div class="col align-self-center mt-5">
          <h6>＜レビュー履歴＞</h6>

          <% @posts.each do |post| %>
          <div class="card ml-5">
            <div class="card-body">
              
              <%= render "trader/posts/rating", post: post %>
              <div class="card-text">
              <%= post.customer.last_name %>　様
              <%= post.created_at.strftime('%Y/%m/%d') %><br>
              <%= post.comment %></tr><br>
              </div>
            </div>
          </div>
          
          <% end %>
          <div class="m-3">
            <%= link_to "レビューする", new_trader_post_path(@trader), class: "btn btn-success" %>
          </div>
        </div>
        <% end %>
    </div>
</div>