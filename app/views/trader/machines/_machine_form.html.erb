<%= form_with model: machine, method: :post, url: machines_path, html: {class: 'p-5 shadow-lg'} do |f| %>
  <div class="form-group">
    <%= f.label :possible_machine, 'タグ名', class: 'col-md-2' %>
    <%= f.text_field :possible_machine, autofocus: true, autocomplete: 'off', class: 'col-md-6' %>
    <%= f.submit '追加', class: 'btn btn-sm btn-outline-info col-md-2 offset-1' %>
  </div>
<% end %>