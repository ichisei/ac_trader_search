<div class="container mt-3 text-center">
<h2>レビュー入力</h2>
<br>
  <div class="row">
    <div class="col-5 offset-4">
      <%= form_with model: [@trader, @comment, @rating], url: trader_posts_path, method: :post do |f| %>
        <div class="form-group row pl-5" id="star">
          <%= f.label :rating, " 評価 " %>
          <%= f.hidden_field :rating, id: :review_star, class: 'form-control' %>
          <div id="post_raty"></div>
        </div>
        <script>
          $(document).on('turbolinks:load', function() {
            let elem = document.querySelector('#post_raty');
            if (elem == null) return;
            elem.innerHTML = ""
            let opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              scoreName: 'post[rating]',
              half: false,
            };
            raty(elem, opt);
          });
        </script>
      <%= f.text_area :comment, rows: '5', class: "w-100", placeholder: "コメントをここに" %>
        <div class="form-group mt-3">
          <%= f.submit '登   録', class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>