<%= form_with model: area, method: :post, url: areas_path, html: {class: 'p-5 shadow-lg'} do |f| %>
  <div class="form-group">
    <%= f.label :compatible_area, 'エリア名', class: 'col-md-2' %>
    <%= f.text_field :compatible_area, autofocus: true, autocomplete: 'off', class: 'col-md-6' %>
    <%= f.submit '追加', class: 'btn btn-sm btn-outline-info col-md-2 offset-1' %>
  </div>
<% end %>