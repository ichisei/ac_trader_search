<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <P class="nav-link active" aria-current="true"><%= @trader.company_name %></P>
      </li>
    </ul>
  </div>
  <div class="card-body">
  <h2>会社詳細</h2>
    <div class="row">
      <div class="col-md-2">
        <div class="form-group col-8">
          <%= image_tag @trader.get_profile_image(250, 250) %>
        </div>
      </div>
      <div class="col-md-10">

        <%= render 'detail', trader: @trader, schedules: @schedules %>

        <div class="flex align-center pl5">
          <%= link_to "編集する", edit_trader_path(@trader), class: "btn btn-success" if @trader == current_trader %>
        </div>
      </div>
    </div>
  </div>
    <!--♯自分の会社のレビューのみ閲覧可能-->
  <% if @trader == current_trader %>
  <div class="col mt-3">
  <h6>＜レビュー＞</h6>
    <% @posts.each do |post| %>
    <div class="card ml-5">
      <div class="card-body">
        <%= render "trader/posts/rating", post: post %>
        <div class="card-text">
          <%= post.customer.last_name %>　様
          <%= post.created_at.strftime('%Y/%m/%d') %><br>
          <%= post.comment %></tr><br>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>